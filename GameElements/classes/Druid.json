{
  "Name": "Druid",
  "hit_points": {
    "hit_dice": "1d8",
    "base": 8,
    "level_increment": 5

  },
  "Primary Ability": "Wisdom",
  "Saving Throw Proficiencies": ["Intelligence", "Wisdom"],
  "Armor Proficiencies": ["Light armor", "Medium armor", "Shields (druids will not wear armor or use shields made of metal)"],
  "Weapon Proficiencies": ["Clubs", "Daggers", "Javelins", "Maces", "Quarterstaffs", "Scimitars", "Sickles", "Slings", "Spears"],
  "class Features": {
    "Druidic": {
      "description": "You know Druidic, the secret language of druids. You can speak the language and use it to leave hidden messages. You and others who know this language automatically spot such a message. Others spot the message's presence with a successful DC 15 Wisdom (Perception) check but can't decipher it without magic.",
      "options": []
    },
    "Spellcasting": {
      "description": "Drawing on the divine essence of nature itself, you can cast spells to shape that essence to your will. See the Druid Spellcasting table for the number of spells you can prepare each day.",
      "options": []
    },
    "Druidic Circle": {
      "description": "At 2nd level, you choose to identify with a circle of druids: the Circle of the Land or the Circle of the Moon, both detailed at the end of the class description. Your choice grants you features at 2nd level and again at 6th, 10th, and 14th level.",
      "options": ["Circle of the Land", "Circle of the Moon"]
    },
    "Wild Shape": {
      "description": "Starting at 2nd level, you can use your action to magically assume the shape of a beast that you have seen before. See the Wild Shape table for the forms available to you.",
      "options": []
    },
    "Timeless Body": {
      "description": "Starting at 18th level, the primal magic that you wield causes you to age more slowly. For every 10 years that pass, your body ages only 1 year.",
      "options": []
    },
    "Beast Spells": {
      "description": "Beginning at 18th level, you can cast many of your druid spells in any shape you assume using Wild Shape. You can perform the somatic and verbal components of a druid spell while in a beast shape, but you aren't able to provide material components.",
      "options": []
    }
  },
  "starter_equipment": {
    "options": [
      {
        "description": "Choose a wooden shield or any simple weapon",
        "choices": [
          "Wooden shield",
          "Any simple weapon"
        ],
        "requires_selection": true
      },
      {
        "description": "Choose a scimitar or any simple melee weapon",
        "choices": [
          "Scimitar",
          "Any simple melee weapon"
        ],
        "requires_selection": true
      },
      {
        "description": "Leather armor, an explorer's pack, and a druidic focus",
        "choices": [
          "Leather armor",
          "Explorer's pack",
          "Druidic focus"
        ],
        "requires_selection": false
      }
    ]
  },
